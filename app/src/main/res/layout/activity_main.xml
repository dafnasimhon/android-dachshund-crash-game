<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clouds_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_LAY_hearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/main_IMG_heart0"
            android:layout_width="@dimen/heart_width"
            android:layout_height="@dimen/heart_height"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="@dimen/heart_width"
            android:layout_height="@dimen/heart_height"
            android:layout_marginStart="@dimen/heart_margin_start"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="@dimen/heart_width"
            android:layout_height="@dimen/heart_height"
            android:layout_marginStart="@dimen/heart_margin_start"
            android:src="@drawable/heart" />
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:text=""
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        app:cornerRadius="32dp"
        app:backgroundTint="@color/bottom_color"
        app:icon="@drawable/outline_arrow_back_24"
        app:iconTint="@android:color/white"
        app:iconSize="32dp"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text=""
        android:textAllCaps="false"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        app:cornerRadius="32dp"
        app:backgroundTint="@color/bottom_color"
        app:icon="@drawable/outline_arrow_forward_24"
        app:iconTint="@android:color/white"
        app:iconSize="32dp"
        app:iconGravity="textStart" />


